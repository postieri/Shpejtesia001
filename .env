# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost

# PHP Settings
PHP_MEMORY_LIMIT=256M
MAX_UPLOAD_SIZE=100M
MAX_EXECUTION_TIME=300

# Apache Settings
APACHE_TIMEOUT=300
APACHE_MAX_CLIENTS=150
APACHE_START_SERVERS=5
APACHE_MIN_SPARE_SERVERS=5
APACHE_MAX_SPARE_SERVERS=10

# Security Settings
SECURITY_SALT=your_random_string_here
ALLOWED_HOSTS=localhost,127.0.0.1
MAX_REQUEST_RATE=100
ENABLE_MODSECURITY=true

# Monitoring Settings
ENABLE_MONITORING=true
MONITOR_INTERVAL=60
DISK_THRESHOLD=90
MEMORY_THRESHOLD=90
LOAD_THRESHOLD=5.0

# Logging Settings
LOG_LEVEL=warning
LOG_MAX_SIZE=10M
LOG_MAX_FILES=5

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=1d
BACKUP_RETENTION=7d